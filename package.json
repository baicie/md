{
  "name": "md",
  "private": "true",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks && pnpm run stub",
    "format": "prettier --write --cache .",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "echo typecheck",
    "server-dev": "turbo run dev --filter=./servers/*",
    "server-build": "turbo run build --filter=./servers/*",
    "build": "pnpm -r build",
    "test-unit": "vitest run --workspace vitest.workspace.mts",
    "test-e2e": "vitest run --workspace vitest.workspace.e2e.mts",
    "test-docs": "pnpm run docs-build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "docs": "pnpm --filter=docs run docs",
    "docs-build": "pnpm --filter=docs run docs-build",
    "docs-serve": "pnpm --filter=docs run docs-serve",
    "update-version": "tsx scripts/update-version.ts",
    "publish-script": "tsx scripts/publish-script.ts",
    "update": "ncu -uws -x eslint && ncu -u -x eslint",
    "stub": "turbo run stub",
    "type-check": "tsc --noEmit",
    "dev:web": "pnpm --filter web dev",
    "dev:desktop": "pnpm --filter desktop tauri dev",
    "build:web": "pnpm --filter web build",
    "build:desktop": "pnpm --filter desktop tauri build",
    "preview:web": "pnpm --filter web preview",
    "preview:desktop": "pnpm --filter desktop preview"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/node": "~22.10.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^1.3.1",
    "cross-env": "^7.0.3",
    "eslint": "9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "fs-extra": "^11.2.0",
    "globals": "^15.14.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "sass": "^1.83.1",
    "simple-git-hooks": "^2.11.1",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0",
    "vite": "^6.0.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@9.15.3",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "*/**/{src,types}/**/*.ts": [
      "eslint --cache --fix"
    ],
    "*/**/*.d.ts": [
      "eslint --cache --fix"
    ],
    "*/**/__tests__/**/*.ts": [
      "eslint --cache --fix"
    ]
  }
}
