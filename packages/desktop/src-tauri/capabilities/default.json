{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    "dialog:allow-open",
    {
      "identifier": "fs:read-all",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:write-all",
      "allow": [
        {
          "path": "**"
        }
      ]
    }
  ]
}
